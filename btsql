CREATE DATABASE sqlexcercise;

CREATE TABLE follow (
    id INT(11),
    from_user_id INT(11),
	to_user_id INT(11),
    created_at TIMESTAMP
);
CREATE TABLE blog (
    id INT(11),
	category_id INT(11),
	user_id INT(11),
	title VARCHAR(255),
	view INT(11),
	is_active TINYINT(1),
	content TEXT,
    created_at TIMESTAMP,
	updated_at TIMESTAMP
);
CREATE TABLE comment (
	id INT(11),
	target_table VARCHAR(20),
	target_id INT(11),
	user_id INT(11),
	comment TEXT,
	created_at TIMESTAMP,
	updated_at TIMESTAMP
); 
CREATE TABLE user (
	id INT(11),
	full_name VARCHAR(255),
	email VARCHAR(255),
	rank TINYINT(4),
	is_active TINYINT(1),
	created_at TIMESTAMP
);
CREATE TABLE category (
	id INT(11),
	title VARCHAR(255),
	description VARCHAR(255)
);
CREATE TABLE news(
	id INT(11),
	category_id INT(11),
	title VARCHAR(255),
	view INT(11),
	is_active TINYINT(1),
	content TEXT,
	created_at TIMESTAMP,
	updated_at TIMESTAMP
);
